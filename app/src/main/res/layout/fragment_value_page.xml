<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/valuePageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ValuePageFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="42dp"
        android:textColor="@color/colorWhite"
        android:text="@{appViewModel.latestPosition.make_name}"
        app:layout_constraintBottom_toTopOf="@+id/camera_new_capture_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <Button
        android:id="@+id/camera_new_capture_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorButtonBackground"
        android:elevation="2dp"
        android:text="Take a new photo"
        app:layout_constraintBottom_toTopOf="@+id/button_history"
        app:layout_constraintEnd_toEndOf="@id/valuePageLayout"
        app:layout_constraintStart_toStartOf="@id/valuePageLayout" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorButtonBackground"
        android:elevation="2dp"
        android:text="SETTINGS"
        app:layout_constraintBottom_toBottomOf="@id/valuePageLayout"
        app:layout_constraintStart_toStartOf="@id/valuePageLayout" />

    <Button
        android:id="@+id/button_history"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorButtonBackground"
        android:elevation="2dp"
        android:text="HISTORY"
        app:layout_constraintBottom_toBottomOf="@id/valuePageLayout"
        app:layout_constraintEnd_toEndOf="@id/valuePageLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>